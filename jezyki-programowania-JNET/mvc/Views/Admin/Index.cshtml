@{
    ViewData["Title"] = "Admin panel";
}


<div class="text-center">
    <h1 class="display-4">Hello admin. Users:</h1>
    
    <div class="d-flex w-100 flex-row">
        <div class="d-flex w-25"></div>
        <div class="d-flex flex-column w-50">
            @foreach (var user in Model.Users)
            {
                <div class="d-flex flex-row w-100 justify-content-between align-items-baseline">
                    <p>@user.Username</p>
                    <a class="btn btn-primary" href="@Url.Action("RemoveUser","Admin", new {username = user.Username})">Remove user</a>
                </div>
            }
        </div>
        <div class="d-flex w-25"></div>
    </div>
    <div class="d-flex w-100 flex-row">
        <div class="d-flex w-25"></div>
        <div class="d-flex flex-column w-50">
            <form action="@Url.Action("AddUser", "Admin")" method="post">
                <label for="username">Username:</label>
                <input type="text" name="username" />
                <input type="submit" value="Add user" />
            </form>
        </div>
        <div class="d-flex w-25"></div>
        
    </div>
    
</div>
